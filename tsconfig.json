{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"newLine": "LF",
		"outDir": "./lib/",
		"target": "es5",
		"sourceMap": true,
		"declaration": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"lib": ["es2017", "es2015", "es6"],
		"noImplicitAny": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true
	}
}
