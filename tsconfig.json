{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"outDir": "./dist/",
		"target": "es5",
		"sourceMap": true,
		"declaration": true,
		"lib": ["es2017", "es2015", "es6"],
		"noImplicitAny": false,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true
	}
}
